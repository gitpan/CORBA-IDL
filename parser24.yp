/*
 *	Interface Definition Language (OMG IDL CORBA v2.4)
 */

%token	IDENTIFIER
%token	INTEGER_LITERAL
%token	STRING_LITERAL
%token	WIDE_STRING_LITERAL
%token	CHARACTER_LITERAL
%token	WIDE_CHARACTER_LITERAL
%token	FIXED_PT_LITERAL
%token	FLOATING_PT_LITERAL
	/*	Keyword		*/
%token	ABSTRACT
%token	ANY
%token	ATTRIBUTE
%token	BOOLEAN
%token	CASE
%token	CHAR
%token	CONST
%token	CONTEXT
%token	CUSTOM
%token	DEFAULT
%token	DOUBLE
%token	ENUM
%token	EXCEPTION
%token	FACTORY
%token	FALSE
%token	FIXED
%token	FLOAT
%token	IN
%token	INOUT
%token	INTERFACE
%token	LOCAL
%token	LONG
%token	MODULE
%token	NATIVE
%token	OBJECT
%token	OCTET
%token	ONEWAY
%token	OUT
%token	PRIVATE
%token	PUBLIC
%token	RAISES
%token	READONLY
%token	SEQUENCE
%token	SHORT
%token	STRING
%token	STRUCT
%token	SUPPORTS
%token	SWITCH
%token	TRUE
%token	TRUNCATABLE
%token	TYPEDEF
%token	UNION
%token	UNSIGNED
%token	VALUEBASE
%token	VALUETYPE
%token	VOID
%token	WCHAR
%token	WSTRING

%start	specification

%%

/* 1 */		/* 3.5	OMG IDL Specification */
specification
:	definitions
		{
			$_[0]->YYData->{root} = new Specification($_[0],
					'list_decl'			=>	$_[1],
			);
		}
|	/* empty */
		{
			$_[0]->Error("Empty specification.\n");
		}
|	error
		{
			$_[0]->Error("definition declaration excepted.\n");
		}
;

definitions
:	definition							{ [$_[1]]; }
|	definition	definitions				{ unshift(@{$_[2]},$_[1]); $_[2]; }
;

/* 2 */
definition
:	type_dcl	';'						#default action
|	const_dcl	';'						#default action
|	except_dcl	';'						#default action
|	interface	';'						#default action
|	module		';'						#default action
|	value		';'						#default action
|	type_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	const_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	except_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	interface	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	module		error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	value		error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
;

/* 3 */		/* 3.6	Module Declaration */
module
:	module_header	'{'	definitions	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentRoot($_[1]);
			$_[1]->configure('list_decl' => $_[3])
					if (defined $_[1]);
		}
|	module_header	'{'	error		'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentRoot($_[1]);
			$_[0]->Error("definition declaration excepted.\n");
			$_[0]->YYErrok();
		}
|	module_header	error
		{
			$_[0]->YYData->{symbtab}->PopCurrentRoot($_[1]);
			$_[0]->Error("'\x7b' excepted.\n");
			$_[0]->YYErrok();
		}
;

module_header
:	MODULE	IDENTIFIER
		{
			new Module($_[0],
					'idf'				=>	$_[2],
			);
		}
|	MODULE	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 4 */		/* 3.7	Interface Declaration */
interface
:	interface_dcl						#default action
|	forward_dcl							#default action
;

/* 5 */
interface_dcl
:	interface_header	'{'	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	[]);
		}
|	interface_header	'{'	interface_body	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	$_[3]);
		}
|	interface_header	'{'	error			'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[0]->Error("export declaration excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 6 */		/* 3.7.4	Forward Declaration */
forward_dcl
:	interface_mod	INTERFACE	IDENTIFIER
		{
			new ForwardInterface($_[0],
					'modifier'				=>	$_[1],
					'idf'					=>	$_[3]
			);
		}
|	interface_mod	INTERFACE	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
;

interface_mod
:	ABSTRACT		/* 6.2		Semantics of Abstract Interfaces */		#default action
|	LOCAL			/* 3.7.6	Local Interface */						#default action
|	/* empty */															#default action
;

/* 7 */		/* 3.7.1	Interface Header */
interface_header
:	interface_mod	INTERFACE	IDENTIFIER
		{
			new Interface($_[0],
					'modifier'				=>	$_[1],
					'idf'					=>	$_[3]
			);
		}
|	interface_mod	INTERFACE	IDENTIFIER	interface_inheritance_spec
		{
			new Interface($_[0],
					'modifier'				=>	$_[1],
					'idf'					=>	$_[3],
					'list_inheritance'		=>	$_[4]
			);
		}
;

/* 8 */		/* 3.7.3 Interface Body */
interface_body
:	exports								#default action
;

exports
:	export                      		{ [$_[1]]; }
|	export	exports						{ unshift(@{$_[2]},$_[1]); $_[2]; }
;

/* 9 */
export
:	type_dcl	';'						#default action
|	const_dcl	';'						#default action
|	except_dcl	';'						#default action
|	attr_dcl	';'						#default action
|	op_dcl		';'						#default action
|	type_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	const_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	except_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	attr_dcl	error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
|	op_dcl		error
		{
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1];						#default action
		}
;

/* 10 */	/* 3.7.5	Interface Inheritance */
interface_inheritance_spec
:	':'	interface_names					{ $_[2]; }
|	':'	error
		{
			$_[0]->Error("Interface name excepted.\n");
			$_[0]->YYErrok();
		}
;

interface_names
:	interface_name						{ [$_[1]]; }
|	interface_name	','	interface_names	{ unshift(@{$_[3]},$_[1]); $_[3]; }
;

/* 11 */
interface_name
:	scoped_name
		{
				Interface->Lookup($_[0],$_[1])
		}
;

/* 12 */
scoped_name
:	IDENTIFIER							#default action
|	'::'	IDENTIFIER
		{
			$_[1] . $_[2];
		}
|	'::'	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
			'';
		}
|	scoped_name	'::'	IDENTIFIER
		{
			$_[1] . $_[2] . $_[3];
		}
|	scoped_name	'::'	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
			$_[1];
		}
;

/* 13 */	/* 3.8	Value Declaration */
value
:	value_dcl							#default action
|	value_abs_dcl						#default action
|	value_box_dcl						#default action
|	value_forward_dcl					#default action
;

/* 14 */	/* 3.8.4	Value Forward declaration */
value_forward_dcl
:				VALUETYPE	IDENTIFIER
		{
			new ForwardRegularValue($_[0],
					'idf'				=>	$_[2]
			);
		}
|	ABSTRACT	VALUETYPE	IDENTIFIER
		{
			new ForwardAbstractValue($_[0],
					'idf'				=>	$_[3]
			);
		}
;

/* 15 */	/*	3.8.2	Boxed Value Type */
value_box_dcl
:	VALUETYPE	IDENTIFIER	type_spec
		{
			new BoxedValue($_[0],
					'idf'				=>	$_[2],
					'type'				=>	$_[3]
			);
		}
;

/* 16 */	/* 3.8.3	Abstract Value Type */
value_abs_dcl
:	value_abs_header	'{'	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	[])
					if (defined $_[1]);
		}
|	value_abs_header	'{'	exports	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	$_[3])
					if (defined $_[1]);
		}
|	value_abs_header	'{'	error	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[0]->Error("export declaration excepted.\n");
			$_[0]->YYErrok();
		}
;

value_abs_header
:	ABSTRACT	VALUETYPE	IDENTIFIER
		{
			new AbstractValue($_[0],
					'idf'				=>	$_[3]
			);
		}
|	ABSTRACT	VALUETYPE	IDENTIFIER	value_inheritance_spec
		{
			new AbstractValue($_[0],
					'idf'				=>	$_[3],
					'inheritance'		=>	$_[4]
			);
		}
|	ABSTRACT	VALUETYPE	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
|	ABSTRACT	error
		{
			$_[0]->Error("'valuetype' excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 17 */	/* 3.8.1	Regular Value Type */
value_dcl
:	value_header	'{'	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	[])
					if (defined $_[1]);
		}
|	value_header	'{'	value_elements	'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[1]->configure('list_decl'		=>	$_[3])
					if (defined $_[1]);
		}
|	value_header	'{'	error			'}'
		{
			$_[0]->YYData->{symbtab}->PopCurrentScope($_[1]);
			$_[0]->YYData->{curr_itf} = undef;
			$_[0]->Error("value_element excepted.\n");
			$_[0]->YYErrok();
		}
;

value_elements
:	value_element						{ [$_[1]]; }
|	value_element	value_elements		{ unshift(@{$_[2]},$_[1]); $_[2]; }
;

/* 18 */
value_header
:				VALUETYPE	IDENTIFIER
		{
			new RegularValue($_[0],
					'idf'				=>	$_[2]
			);
		}
|	CUSTOM		VALUETYPE	IDENTIFIER
		{
			new RegularValue($_[0],
					'modifier'			=>	$_[1],
					'idf'				=>	$_[3]
			);
		}
|				VALUETYPE	IDENTIFIER	value_inheritance_spec
		{
			new RegularValue($_[0],
					'idf'				=>	$_[2],
					'inheritance'		=>	$_[3]
			);
		}
|	CUSTOM		VALUETYPE	IDENTIFIER	value_inheritance_spec
		{
			new RegularValue($_[0],
					'modifier'			=>	$_[1],
					'idf'				=>	$_[3],
					'inheritance'		=>	$_[4]
			);
		}
|				VALUETYPE	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
|	CUSTOM		VALUETYPE	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
|	CUSTOM		error
		{
			$_[0]->Error("valuetype excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 19 */	/* 3.8.5	Valuetype Inheritance */
value_inheritance_spec
:	':'				value_names
		{
			new InheritanceSpec($_[0],
					'list_value'			=>	$_[2]
			);
		}
|	':'	TRUNCATABLE	value_names
		{
			new InheritanceSpec($_[0],
					'modifier'			=>	$_[2],
					'list_value'		=>	$_[3]
			);
		}
|	':'				value_names	SUPPORTS	interface_names
		{
			new InheritanceSpec($_[0],
					'list_value'		=>	$_[2],
					'list_interface'	=>	$_[4]
			);
		}
|	':'	TRUNCATABLE	value_names	SUPPORTS	interface_names
		{
			new InheritanceSpec($_[0],
					'modifier'			=>	$_[2],
					'list_value'		=>	$_[3],
					'list_interface'	=>	$_[5]
			);
		}
|	':'				value_names	SUPPORTS	error
		{
			$_[0]->Error("interface_name excepted.\n");
			$_[0]->YYErrok();
		}
|	':'	TRUNCATABLE	value_names	SUPPORTS	error
		{
			$_[0]->Error("interface_name excepted.\n");
			$_[0]->YYErrok();
		}
|	':'	TRUNCATABLE	error
		{
			$_[0]->Error("value_name excepted.\n");
			$_[0]->YYErrok();
		}
|	':'	error
		{
			$_[0]->Error("'truncatable' excepted.\n");
			$_[0]->YYErrok();
		}
|								SUPPORTS	interface_names
		{
			new InheritanceSpec($_[0],
					'list_interface'	=>	$_[2]
			);
		}
|								SUPPORTS	error
		{
			$_[0]->Error("interface_name excepted.\n");
			$_[0]->YYErrok();
		}
;

value_names
:	value_name							{ [$_[1]]; }
|	value_name	','	value_names			{ unshift(@{$_[3]},$_[1]); $_[3]; }
;

/* 20 */
value_name
:	scoped_name
		{
			RegularValue->Lookup($_[0],$_[1]);
		}
;

/* 21 */
value_element
:	export								#default action
|	state_member						#default action
|	init_dcl							#default action
;

/* 22 */	/* 3.8.1.4	State Members */
state_member
:	state_mod	type_spec	declarators	';'
		{
			new StateMembers($_[0],
					'modifier'			=>	$_[1],
					'type'				=>	$_[2],
					'list_expr'			=>	$_[3]
			);
		}
|	state_mod	type_spec	error	';'
		{
			$_[0]->Error("declarator excepted.\n");
			$_[0]->YYErrok();
		}
|	state_mod	error	';'
		{
			$_[0]->Error("type_spec excepted.\n");
			$_[0]->YYErrok();
		}
;

state_mod
:	PUBLIC								#default action
|	PRIVATE								#default action
;

/* 23 */	/* 3.8.1.5	Initializers */
init_dcl
:	init_header	'('	')'	';'				#default action
|	init_header	'('	init_param_decls	')'	';'
		{
			delete $_[0]->YYData->{unnamed_symbtab}
					if (exists $_[0]->YYData->{unnamed_symbtab});
			$_[1]->Configure($_[0],
					'list_param'	=>	$_[3]
			) if (defined $_[1]);
		}
|	init_header	'('	init_param_decls	')'	error
		{
			delete $_[0]->YYData->{unnamed_symbtab}
					if (exists $_[0]->YYData->{unnamed_symbtab});
			$_[0]->Warning("';' excepted.\n");
			$_[0]->YYErrok();
			$_[1]->Configure($_[0],
					'list_param'	=>	$_[3]
			) if (defined $_[1]);
		}
|	init_header	'('	error				')'	';'
		{
			delete $_[0]->YYData->{unnamed_symbtab}
					if (exists $_[0]->YYData->{unnamed_symbtab});
			$_[0]->Error("init_param_decls excepted.\n");
			$_[0]->YYErrok();
		}
|	init_header	'('	error				')'	error
		{
			delete $_[0]->YYData->{unnamed_symbtab}
					if (exists $_[0]->YYData->{unnamed_symbtab});
			$_[0]->Error("init_param_decls excepted.\n");
			$_[0]->YYErrok();
		}
|	init_header	error
		{
			delete $_[0]->YYData->{unnamed_symbtab}
					if (exists $_[0]->YYData->{unnamed_symbtab});
			$_[0]->Error("'(' excepted.\n");
			$_[0]->YYErrok();
		}
;

init_header
:	FACTORY	IDENTIFIER
		{
			new Factory($_[0],							# like Operation
					'idf'				=>	$_[2]
			);
		}
|	FACTORY	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 24 */
init_param_decls
:	init_param_decl						{ [$_[1]]; }
|	init_param_decl	','	init_param_decls
										{ unshift(@{$_[3]},$_[1]); $_[3]; }
;

/* 25 */
init_param_decl
:	init_param_attribute	param_type_spec		simple_declarator
		{
			new Parameter($_[0],
					'attr'				=>	$_[1],
					'type'				=>	$_[2],
					'idf'				=>	$_[3]
			);
		}
;

/* 26 */
init_param_attribute
:	IN									#default action
;

/* 27 */	/* 3.9	Constant Declaration */
const_dcl
:	CONST	const_type	IDENTIFIER	'='	const_exp
		{
			new Constant($_[0],
					'type'				=>	$_[2],
					'idf'				=>	$_[3],
					'list_expr'			=>	$_[5]
			);
		}
|	CONST	const_type	IDENTIFIER	'='	error
		{
			$_[0]->Error("Expression excepted.\n");
			$_[0]->YYErrok();
		}
|	CONST	const_type	IDENTIFIER	error
		{
			$_[0]->Error("'=' excepted.\n");
			$_[0]->YYErrok();
		}
|	CONST	const_type	error
		{
			$_[0]->Error("Identifier excepted.\n");
			$_[0]->YYErrok();
		}
|	CONST	error
		{
			$_[0]->Error("const_type excepted.\n");
			$_[0]->YYErrok();
		}
;

/* 28 */
const_type
:	integer_type						#default action
|	char_type							#default action
|	wide_char_type						#default action
|	boolean_type						#default action
|	floating_pt_type					#default action
|	string_type							#default action
|	wide_string_type					#default action
|	fixed_pt_const_type					#default action
|	scoped_name
		{
			TypeDeclarator->Lookup($_[0],$_[1]);
		}
|	octet_type							#default action
;

/* 29 */
const_exp
:	or_expr								#default action
;

/* 30 */
or_expr
:	xor_expr							#default action
|	or_expr		'|'		xor_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 31 */
xor_expr
:	and_expr							#default action
|	xor_expr	'^'		and_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 32 */
and_expr
:	shift_expr							#default action
|	and_expr	'&'		shift_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 33 */
shift_expr
:	add_expr							#default action
|	shift_expr	'>>'	add_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
|	shift_expr	'<<'	add_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 34 */
add_expr
:	mult_expr							#default action
|	add_expr	'+'		mult_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
|	add_expr	'-'		mult_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 35 */
mult_expr
:	unary_expr							#default action
|	mult_expr	'*'		unary_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
|	mult_expr	'/'		unary_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
|	mult_expr	'%'		unary_expr
		{
			BuildBinop($_[1],$_[2],$_[3]);
		}
;

/* 36 */
unary_expr
:	unary_operator	primary_expr
		{
			BuildUnop($_[1],$_[2]);
		}
|	primary_expr						#default action
;

/* 37 */
unary_operator
:	'-'									#default action
|	'+'									#default action
|	'~'									#default action
;

