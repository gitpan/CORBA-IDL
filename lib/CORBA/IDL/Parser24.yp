use warnings;

our $VERSION = '2.60';
our $IDL_VERSION = '2.4';

sub BuildUnop
{
    my ($op, $expr) = @_;

    my $node = new UnaryOp($_[0],
            'op'    =>  $op
    );
    push @$expr, $node;
    return $expr;
}

sub BuildBinop
{
    my ($left, $op, $right) = @_;

    my $node = new BinaryOp($_[0],
            'op'    =>  $op
    );
    push @$left, @$right;
    push @$left, $node;
    return $left;
}

